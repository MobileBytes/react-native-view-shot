{
  "name": "@hrpos/react-native-view-shot",
  "version": "3.8.0",
  "description": "Capture a React Native view to an image",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "keywords": [
    "react-native",
    "screenshot",
    "viewshot",
    "view-snapshot",
    "snapshot",
    "rasterize"
  ],
  "author": "Marc Rousavy <marcrousavy@hotmail.com> (https://github.com/MobileBytes)",
  "homepage": "https://github.com/MobileBytes/react-native-view-shot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MobileBytes/react-native-view-shot.git"
  },
  "bugs": {
    "url": "https://github.com/MobileBytes/react-native-view-shot/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "html2canvas": "^1.4.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "flow-bin": "^0.170.0",
    "html-webpack-plugin": "^5.5.1",
